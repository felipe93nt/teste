<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>

		<message-bundle>br.com.bradesco.web.ricc.view.bundle.Messages</message-bundle>
		<!-- 
			<el-resolver>org.apache.webbeans.el.WebBeansELResolver</el-resolver>
		 -->
		<locale-config>
			<default-locale>pt</default-locale>
			<supported-locale>pt</supported-locale>
			<supported-locale>es</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.com.bradesco.web.ricc.view.bundle.Messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<converter>
		<converter-id>testeConverter</converter-id>
		<converter-class>br.com.bradesco.web.ricc.example.view.bean.TesteConverter</converter-class>
	</converter>

	<validator>
		<validator-id>testeValidator</validator-id>
		<validator-class>br.com.bradesco.web.ricc.example.view.bean.TesteValidator</validator-class>
	</validator>

</faces-config>